extends layout

block content
  h1 {{ title }}
  p Welcome to #{title}
  div(ng-controller='DoughnutCtrl')
    h2 do you like cookies?
    div
      button(ng-click="sendChoice(0)") {{labels[0]}}
      button(ng-click="sendChoice(1)") {{labels[1]}}
      button(ng-click="sendChoice(2)") {{labels[2]}}
    div
      h3 choose your chart type
      a(ui-sref="doughnut") doughnut 
      br
      a(ui-sref="piechart") pie
      br
      a(ui-sref="polar") polar
    
    div(ui-view)

    div
      button(ng-click="sendReset()") reset

    
